<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
    <welcome-file-list>
        <welcome-file>catalog</welcome-file>
    </welcome-file-list>
    
    <resource-ref>
        <description>JNDI reference to a data source</description>
        <res-ref-name>jdbc/phonetastic_db</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
    <session-config>
		<session-timeout>15</session-timeout>
	</session-config>
	
	<!-- ERROR PAGES -->
	<error-page>
	    <error-code>404</error-code>
	    <location>/WEB-INF/views/error/error404.html</location>
	</error-page>
	
	<!-- FILTERS -->
	
	<filter>
	    <filter-name>AuthenticationFilter</filter-name>
	    <filter-class>it.unisa.phonetastic.control.filter.AuthenticationFilter</filter-class>
	</filter>
	
	<filter-mapping>
	    <filter-name>AuthenticationFilter</filter-name>
	    <url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
	    <filter-name>AdminAuthenticationFilter</filter-name>
	    <filter-class>it.unisa.phonetastic.control.filter.AdminAuthenticationFilter</filter-class>
	</filter>
	
	<filter-mapping>
	    <filter-name>AdminAuthenticationFilter</filter-name>
	    <url-pattern>/admin/*</url-pattern>
	</filter-mapping>
	
	<!-- SERVLETS -->
	
    <servlet>
        <servlet-name>ProductCatalogControl</servlet-name>
        <servlet-class>it.unisa.phonetastic.control.ProductCatalogControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductCatalogControl</servlet-name>
        <url-pattern>/catalog</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CartControl</servlet-name>
        <servlet-class>it.unisa.phonetastic.control.CartControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartControl</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>InfoControl</servlet-name>
        <servlet-class>it.unisa.phonetastic.control.ProductInfoControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InfoControl</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CheckoutControl</servlet-name>
        <servlet-class>it.unisa.phonetastic.control.CheckoutControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckoutControl</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
      
    <servlet>
        <servlet-name>LoginControl</servlet-name>
        <servlet-class>it.unisa.phonetastic.control.LoginControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginControl</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutControl</servlet-name>
        <servlet-class>it.unisa.phonetastic.control.LogoutControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutControl</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>OrderListControl</servlet-name>
        <servlet-class>it.unisa.phonetastic.control.OrderListControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderListControl</servlet-name>
        <url-pattern>/my-orders</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>OrderDetailsControl</servlet-name>
        <servlet-class>it.unisa.phonetastic.control.OrderDetailsControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderDetailsControl</servlet-name>
        <url-pattern>/order-details</url-pattern>
    </servlet-mapping>
    
    <!-- ADMIN SERVLETS -->
    
    <!-- 
    <servlet>
        <servlet-name>AdminLoginControl</servlet-name>
        <servlet-class>it.unisa.phonetastic.control.admin.AdminLoginControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginControl</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>
    -->
    
    <servlet>
        <servlet-name>DashboardControl</servlet-name>
        <servlet-class>it.unisa.phonetastic.control.admin.DashboardControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardControl</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AddProductControl</servlet-name>
        <servlet-class>it.unisa.phonetastic.control.admin.AddProductControl</servlet-class>
        <init-param>
        	<param-name>image-upload</param-name>
        	<param-value>resources\images\ProductImages</param-value>
        </init-param>
	    <multipart-config>
	        <max-file-size>10485760</max-file-size>
	        <max-request-size>20971520</max-request-size>
	        <file-size-threshold>5242880</file-size-threshold>
	    </multipart-config>
	</servlet>
    <servlet-mapping>
        <servlet-name>AddProductControl</servlet-name>
        <url-pattern>/admin/add-product</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ListProductsControl</servlet-name>
        <servlet-class>it.unisa.phonetastic.control.admin.ListProductsControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductsControl</servlet-name>
        <url-pattern>/admin/products</url-pattern>
    </servlet-mapping>
  
    <servlet>
        <servlet-name>ListOrdersControl</servlet-name>
        <servlet-class>it.unisa.phonetastic.control.admin.ListOrdersControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListOrdersControl</servlet-name>
        <url-pattern>/admin/orders</url-pattern>
    </servlet-mapping>
</web-app>